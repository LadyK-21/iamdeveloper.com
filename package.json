{
    "name": "stackbit-fresh-theme",
    "description": "Stackbit Fresh Theme",
    "version": "0.0.1",
    "license": "MIT",
    "scripts": {
        "develop": "gatsby develop",
        "start": "npm run develop",
        "build": "GATSBY_EXPERIMENTAL_PAGE_BUILD_ON_DATA_CHANGES=true gatsby build --prefix-paths",
        "serve": "gatsby serve"
    },
    "dependencies": {
        "@raae/gatsby-remark-oembed": "^0.1.1",
        "@stackbit/gatsby-plugin-menus": "0.0.4",
        "fs-extra": "^9.0.1",
        "gatsby": "2.23.3",
        "gatsby-plugin-cloudinary-social-cards": "^1.0.2",
        "gatsby-plugin-feed": "^2.5.11",
        "gatsby-plugin-google-analytics": "^2.3.4",
        "gatsby-plugin-manifest": "^2.4.11",
        "gatsby-plugin-offline": "^3.2.9",
        "gatsby-plugin-preact": "^4.0.3",
        "gatsby-plugin-react-helmet": "^3.3.6",
        "gatsby-plugin-sitemap": "^2.4.5",
        "gatsby-source-filesystem": "2.3.11",
        "gatsby-transformer-remark": "2.8.15",
        "js-yaml": "^3.14.0",
        "lodash": "^4.17.19",
        "marked": "^1.1.0",
        "moment": "^2.26.0",
        "moment-strftime": "^0.5.0",
        "node-sass": "^4.14.1",
        "node-sass-utils": "^1.1.3",
        "preact": "^10.4.4",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.1.0",
        "react-html-parser": "^2.0.2",
        "react-script-tag": "^1.1.2",
        "rehype-react": "^6.0.0",
        "sprintf-js": "^1.1.2"
    },
    "devDependencies": {
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "gatsby-plugin-postcss": "^2.3.4",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.10",
        "stylelint": "^13.6.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-scss": "^3.17.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ],
        "*.{scss}": [
            "stylelint --config .styletinrc.json"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 80,
        "tabWidth": 4
    }
}
