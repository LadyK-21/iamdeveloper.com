<section class="post-list pad-top-700">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h2 class="[ post-list__heading ] [ text-700 md:text-800 ]">Latest Newsletter</h2>
    <ol class="[ post-list__items ] [ sf-flow ] [ pad-top-300 ]" reversed>
      <li class="post-list__item">
        <h3 class="font-base leading-tight text-600 weight-mid">
          <a href="{{latestNewsletter.url}}" class="post-list__link" rel="bookmark">{{latestNewsletter.data.title}}</a>
        </h3>
        <time datetime="{{ latestNewsletter.date | w3DateFilter }}" class="text-500 gap-top-300 weight-mid">{{ latestNewsletter.date | dateFilter }}</time>
      </li>
    </ol>
  </div>
</section>